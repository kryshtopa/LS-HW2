- var social = ["Facebook", "VK", "Twitter"]
- var menu = ["Карта проезда", "История заказов", "Корзина"]
- var navigation = ["Планшеты", "Мобильные телефоны", "Mp3 плееры", "Персональные компьютеры", "Ноутбуки", "Аксессуары", "Бытовая техника"]

header.header
  div(class="header__row cf")
    .container
      div(class="social header__social header__social_float-left")
        +menu(social, 'social', '')
      div(class="contacts contacts_float-right")
        div(class="contacts__address contacts__address_float-left") ул. Маяковская 6, офис 17
        div(class="contacts__phone contacts__address_float-right") +7 (921) 123-12-13
  div(class="header__row header__row_colored cf")
    .container
      div(class="logo logo_header")
        a(href="" class="logo__link")
          img(src="../img/logo.png" class="logo__img")
      div(class="search search_header")
        form(class="form search__form")
          input(class="search__input" type="search" placeholder="Что будем искать")
          input(class="search__button" type="submit" )
      div(class="menu menu_header")
        +menu(menu, 'menu')
