body
  .wrapper
    include includes/_header
    nav(class="navigation navigation_wide")
      .container
        +menuNav(navigation, 'navigation', 'wide')
    .container
      ul.breadcrumbs__list
        - var items = ["Главная", "Каталог"]
        each item in items
          li(class="breadcrumbs__item" + ((item == "Каталог") ? ' active' : ''))
            a(href='#').breadcrumbs__link= item            
      h1.container__heading Мобильные телефоны
      include includes/_aside.jade
      include includes/_main.jade
      include includes/_section.jade
      <div id='layout_footer'></div>
  footer.footer
    .footer__wrapper
      .footer__container
        div(class="logo logo_footer float-left footer__logo_float-left")
          a(href="" class="logo__link")
            img(src="img/logo-footer.png" class="logo__img")
            .logo__text CoolTech
        +menuSocial(social, 'social', 'footer')
        nav(class="navigation navigation_footer")
          +menuNav(navigation, 'navigation', 'footer')
    div(class="copyright copyright_footer")
      span(class="copyright__span") All rights reserved. 2015. No copy allowed
      <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
      <script>window.jQuery || document.write('<script src="bower/jquery/dist/jquery.js"><\/script>');
      </script>
      
      <!-- build:js js/vendor.min.js -->            
      <!-- bower:js -->
      <script src="bower/jquery.columnizer/src/jquery.columnizer.min.js"></script>
      <script src="bower/lightbox2/dist/js/lightbox.min.js"></script>    
      <script src="bower/jquery-ui/jquery-ui.min.js"></script>    
      <script src="bower/jquery-ui/ui/slider.js"></script>    
      <script src="bower/select2/dist/js/select2.min.js"></script>   
      <!-- endbower -->
      <!-- endbuild -->
      
      <!-- build:js js/main.min.js -->
      <script src="js/main.js"></script>
      <!-- endbuild -->
